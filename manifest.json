{
  "manifest_version": 3,
  "name": "YT Ad Skipper",
  "version": "2.0",
  "description": "Fastly skipping ads on YouTube.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png"
  }
}
